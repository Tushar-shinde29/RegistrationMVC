@{
    Layout = null;
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <title>Login Page</title>
    <style>
        

        body {
          background: #c0c0c0; 
          font-family: Raleway, sans-serif;
          color: #666;
        }

        .login {
          margin: 20px auto;
          padding: 40px 50px;
          max-width: 300px;
          border-radius: 5px;
          background: #fff;
          box-shadow: 1px 1px 1px #666;
        }
          .login input {
            width: 100%;
            display: block;
            box-sizing: border-box;
            margin: 10px 0;
            padding: 14px 12px;
            font-size: 16px;
            border-radius: 2px; 
            font-family: Raleway, sans-serif;
          }

        .login input[type=text],
        .login input[type=password] {
          border: 1px solid #c0c0c0;
          transition: .2s;
        }

        .login input[type=text]:hover {
          border-color: #F44336;
          outline: none;
          transition: all .2s ease-in-out;
        } 

        .login #loginbtn {
          border: none;
          background: #EF5350;
          color: white;
          font-weight: bold;  
          transition: 0.2s;
          margin: 20px 0px;
          width: 100%;
          height: 10%;
          font-size: 30px;
        }

          .login #loginbtn:hover {
          background: #F44336;  
        }

          .login h2 {
            margin: 20px 0 0; 
            color: #EF5350;
            font-size: 28px;
          }

        .login p {
          margin-bottom: 40px;
        }

          .login h2,
          .login p,
          .login a {
            text-align: center;    
          }
    </style>
</head>
<body onload="checkvalid()">
    <form class="login">
        <h2>Welcome, User!</h2>
        <p>Please log in</p>
        
        <input type="text" name="usrname" id="username" placeholder="UserName" value="" />
        
        <input type="password" name="password" id="password" placeholder="password" value="" />
        <button type="button" name="button" id="loginbtn" value="login" onclick="Login()">Login</button>
    </form>

    <script>
        function checkvalid(){
            console.log("sdfgg",localStorage.getItem("userid"));
            if (localStorage.getItem("userid")) 
            {
                window.location.href = `/Home/DashBoard`; 
            }
          
        }
        async function Login(){
            let username = document.getElementById("username").value;
            let password = document.getElementById("password").value;
            const res = await fetch(`/Login/AuthUser/?username=${username}&password=${password}`);
            const result = await res.json();
            if (result.name == null) { 
                alert("enter valid details");
            }
            else{
                localStorage.setItem("userid", result.id);
                localStorage.setItem("roleid", result.role);
                window.location.href = `/Home/DashBoard`;
            }
            console.log(result);
        }
    </script>
</body>
</html>
